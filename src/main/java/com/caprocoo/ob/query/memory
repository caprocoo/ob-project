CREATE TABLE CAPROCOO.OB_MEMORY (
	MEMORY_SEQ NUMBER,
	MEMORY_TYPE CHAR(3),
	MEMORY_TITLE VARCHAR2(255),
	MEMORY_CONTENT VARCHAR2(4000),
	VIEW_CNT NUMBER,
	ACCOUNT_ID VARCHAR2(255),
	CONSTRAINT OB_MEMORY_PK PRIMARY KEY (MEMORY_SEQ),
	CONSTRAINT FK_OB_ACCOUNT_MEMORY FOREIGN KEY (ACCOUNT_ID) REFERENCES CAPROCOO.OB_ACCOUNT(ACCOUNT_ID)
);

ALTER TABLE CAPROCOO.OB_MEMORY MODIFY ACCOUNT_ID VARCHAR2(255) NOT NULL;
ALTER TABLE CAPROCOO.OB_MEMORY MODIFY MEMORY_TITLE VARCHAR2(255) NOT NULL;
ALTER TABLE CAPROCOO.OB_MEMORY MODIFY MEMORY_CONTENT VARCHAR2(4000) NOT NULL;
ALTER TABLE CAPROCOO.OB_MEMORY MODIFY MEMORY_TYPE VARCHAR2(50) NOT NULL;




